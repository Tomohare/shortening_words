# Register interest in Python interpreter changes (Python 3 for now); and
# don't make the Python package dependent on the virtualenv package
# processing (noawait)
{% if python_version == '3.9' %}
interest-noawait /usr/bin/python3.9
{% elif python_version == '3.7' %}
interest-noawait /usr/bin/python3.7
{% else %}
interest-noawait /usr/bin/python2.6
interest-noawait /usr/bin/python2.7
{% endif %}

# Also provide a symbolic trigger for all dh-virtualenv packages
interest dh-virtualenv-interpreter-update
